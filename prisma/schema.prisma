// prisma/schema.prisma - Banco de dados principal
generator client {
  provider = "prisma-client-js"
  output   = "./generated/main-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id            String   @id @default(uuid())
  name          String
  databaseName  String   @unique
  databaseHost  String   @default("localhost")
  databasePort  Int      @default(5432)
  databaseUser  String   @default("postgres")
  databasePass  String
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  users         User[]
  
  // Campo para armazenar o ID externo da empresa no banco de dados do cliente
  externalId    String?  @unique
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  role      String   @default("user")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Campo para armazenar o ID externo do usu√°rio no banco de dados do cliente
  externalId String?  @unique
}